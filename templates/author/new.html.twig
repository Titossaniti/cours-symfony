{# templates/author/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un Auteur{% endblock %}

{% block body %}
    <h1>Ajouter un nouvel auteur</h1>

    <div>
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name, {'attr': {'class': 'text-danger'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.biography, 'Biographie', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.biography, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.biography, {'attr': {'class': 'text-danger'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}