{# templates/book/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
    <h1>Liste des Livres</h1>
    <a class="link-underline link-underline-opacity-25 link-underline-opacity-100-hover" href="{{ path('book_new')}}">Ajouter un livre</a>
    <ul>
        {% for book in books %}
            <li>
                    <div>
                        <a class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                           href="{{ path('book_detail', {id: book.id}) }}">{{ book.title }}</a>
                        <span>, Ã©cris par </span>
                        <a class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="{{ path('author_detail', {id: book.author.id})}}">{{ book.author.name }}</a>
                    </div>
                {% for category in book.categories %}
                    <div>
                        <a href="{{ path('category_detail', {id: category.id}) }}">
                            <span class="badge bg-secondary">{{ category.name }}</span>
                        </a>
                    </div>
                {% endfor %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}